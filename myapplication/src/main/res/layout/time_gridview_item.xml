<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/user_time_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:padding="10dp"
            android:id="@+id/user_round_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/girdview_time" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="陈飞旭" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID:" />

                <TextView
                    android:id="@+id/time_user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10086" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上午:" />

                <TextView
                    android:id="@+id/time_start_time_am"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9:00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-" />

                <TextView
                    android:id="@+id/time_end_time_am"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:30" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下午:" />

                <TextView
                    android:id="@+id/time_start_time_pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1:00" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-" />

                <TextView
                    android:id="@+id/time_end_time_pm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3:00" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </FrameLayout>
</LinearLayout>
